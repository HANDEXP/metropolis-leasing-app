<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#c9c9ce"
    android:paddingTop="2dp"
    android:paddingLeft="10dp"
    android:paddingBottom="2dp"
    android:paddingRight="0dp">
    <EditText
        android:id="@+id/edittext_for_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="2dp"
        android:paddingLeft="5dp"
        android:layout_weight="4"
        android:background="@drawable/filter_edittext_corners"
        android:layout_marginRight="1dp"
        android:drawableLeft="@drawable/filter_dialog"
        android:drawablePadding="10dp"
        android:singleLine="true"
        android:hint="请输入搜索关键字"
        android:textSize="14sp"
        android:textColorHint="#cdcdcd"
        android:textColor="#000000"
        />
    <Button
        android:id="@+id/cancel_btn_for_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="取消"
        android:textSize="17sp"
        android:textColor="#787b84"
        android:background="#00000000"
        />
</LinearLayout>