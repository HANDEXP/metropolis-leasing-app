<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mas="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/setting_view_selector"
    >

    <LinearLayout
        android:id="@+id/num_and_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/project_number_name_for_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编号:"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="12dp"
            android:textSize="16sp"
            android:textColor="@color/listview_font_color"/>
        <TextView
            android:id="@+id/project_number_for_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:text="R20150101001"
            android:textColor="@color/listview_font_color"/>
        <TextView
            android:id="@+id/project_status_desc_for_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新建"
            android:gravity="end"
            android:layout_margin="5dp"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:textColor="@color/theme_color"
            />
    </LinearLayout>
    <View style="@style/LayoutDivider"
          android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"

        >
        <org.hand.mas.custom_view.RoundImageView
            android:id="@+id/img4order"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/login_frame"
            mas:type="circle"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/order_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/img4order"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"

            >
            <TextView
                android:id="@+id/bp_name_for_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汉得信息技术股份有限公司"
                android:textColor="@color/theme_color"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/project_source_for_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汉得员工购车10辆，走大客户通道"
                android:textColor="@color/listview_font_color"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/bp_class_for_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="识别号:"
                    android:textColor="@color/listview_font_color"/>
                <TextView
                    android:id="@+id/identifier_code_for_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="103948580102"
                    android:textColor="@color/listview_font_color"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:src="@drawable/right_bow"/>
            </LinearLayout>
    </RelativeLayout>
    <View style="@style/SettingDivider"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f2f2f2" />
    <View style="@style/SettingDivider"/>

</LinearLayout>