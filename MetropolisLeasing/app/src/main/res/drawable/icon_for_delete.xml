<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="-10dp">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="ring"
            android:innerRadius="0dp"
            android:thickness="10dp"
            android:useLevel="false">

            <solid android:color="#ff0303" />
            <stroke android:color="#ff0303" android:width="0.5dp"></stroke>
        </shape>
    </item>
    <item
        android:top="1dp" android:bottom="10dp" android:left="10dp" android:right="10dp">
        <rotate android:fromDegrees="0" android:toDegrees="40" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@color/white"/>
                <size android:height="1dp" android:width="12dp"/>
            </shape>
        </rotate>
    </item>

</layer-list>
