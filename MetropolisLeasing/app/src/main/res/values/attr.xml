<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- RoundImageView -->
    <attr name="borderRadius" format="dimension" />
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
    </attr>
    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" />
        <attr name="type" />
    </declare-styleable>

    <!-- ArcMenu -->
    <attr name="position">
        <enum name="left_top" value="0"></enum>
        <enum name="left_bottom" value="1"></enum>
        <enum name="right_top" value="2"></enum>
        <enum name="right_bottom" value="3"></enum>
    </attr>
    <attr name="radius" format="dimension"/>
    <declare-styleable name="ArcMenu">
        <attr name="position"></attr>
        <attr name="radius"></attr>
    </declare-styleable>

    <!-- SlidingMenu -->
    <attr name="rightPadding" format="dimension"></attr>
    <declare-styleable name="SlidingMenu">
        <attr name="rightPadding"></attr>
    </declare-styleable>

    <!-- Badge -->
    <attr name="solidColor" format="color"/>
    <attr name="innerRadius" format="dimension"/>
    <attr name="innerFontSize" format="dimension"/>
    <declare-styleable name="Badge">
        <attr name="solidColor"></attr>
        <attr name="innerRadius"></attr>
        <attr name="innerFontSize"></attr>
    </declare-styleable>

    <attr name="centered" format="boolean" />
    <attr name="selectedColor" format="color" />
    <attr name="strokeWidth" format="dimension" />
    <attr name="unselectedColor" format="color" />
    <declare-styleable name="CirclePageIndicator">
        <!-- Whether or not the indicators should be centered. -->
        <attr name="centered" />
        <!-- Color of the filled circle that represents the current page. -->
        <attr name="fillColor" format="color" />
        <!-- Color of the filled circles that represents pages. -->
        <attr name="pageColor" format="color" />
        <!-- Orientation of the indicator. -->
        <attr name="android:orientation"/>
        <!-- Radius of the circles. This is also the spacing between circles. -->
        <attr name="radius4indicator" format="dimension" />
        <!-- Whether or not the selected indicator snaps to the circles. -->
        <attr name="snap" format="boolean" />
        <!-- Color of the open circles. -->
        <attr name="strokeColor" format="color" />
        <!-- Width of the stroke used to draw the circles. -->
        <attr name="strokeWidth" />
        <!-- View background -->
        <attr name="android:background"/>
    </declare-styleable>

    <!-- CustomPullToRefreshListView -->
    <attr name="pullType">
        <enum name="normal" value="-1" />
        <enum name="only_header" value="0" />
        <enum name="only_footer" value="1" />
        <enum name="both" value="2" />
    </attr>
    <declare-styleable name="CustomPullToRefreshListView">
        <attr name="pullType"></attr>
    </declare-styleable>
</resources>