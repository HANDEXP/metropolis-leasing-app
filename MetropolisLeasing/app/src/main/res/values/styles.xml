<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="LoginEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#d4d4d4</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- 设置界面LinearLayout -->
    <style name="SettingActivityLL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:orientation">horizontal</item>
        <!-- <item name="android:layout_marginLeft">10dp</item> -->
        <!-- <item name="android:layout_marginRight">10dp</item> -->
        <item name="android:background">@drawable/setting_view_selector</item>
        <item name="android:clickable">true</item>

        <item name="android:divider">#ffffff</item>
        <item name="android:dividerHeight">2px</item>
    </style>
    <!-- 设置界面图标 -->
    <style name="SettingActivityIcon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.2</item>
        <!--<item name="android:layout_marginTop">3dp</item>-->
        <!--<item name="android:layout_marginBottom">3dp</item>-->


    </style>
    <!-- 设置界面文字 -->
    <style name="SettingActivity">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_weight">0.65</item>
        <item name="android:textColor">#727272</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- 设置界面详细图标 -->
    <style name="SettingActivityDetail">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.15</item>
        <item name="android:contentDescription">detail</item>
        <item name="android:src">@drawable/right_bow</item>
        <item name="android:scaleType">center</item>
    </style>
    <!-- 设置分割线 -->
    <style name="SettingDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#d6d5d9</item>

    </style>
    <!-- 布局分割线 -->
    <style name="LayoutDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#d6d5d9</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
    </style>
    <!-- 筛选Dialog -->
    <style name="FilterDialogLineLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="FilterDialogTextView">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="FilterDialogEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="FilterDialogDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#d6d5d9</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
</resources>
